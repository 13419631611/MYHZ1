<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/client_jj_name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="33dp"
        android:text="1111111111"
        android:textSize="9sp"
        android:ellipsize="end"
        android:lines="1"
        />
    <TextView
        android:id="@+id/client_jj_price"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="33dp"
        android:text="2222"
        android:textSize="9sp"
        android:gravity="center"

        />
    <TextView

        android:id="@+id/client_jj_money"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="33dp"
        android:text="3333"
        android:textSize="9sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/client_jj_profit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="33dp"
        android:text="4444"
        android:textSize="9sp"
        android:gravity="center"
        />


    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="33dp">
    <TextView
        android:gravity="center"
        android:id="@+id/client_jj_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="111111111111111111111111111"
        android:lines="1"
        android:textSize="9sp"
        android:background="@drawable/shape_client"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        />
    </RelativeLayout>
</LinearLayout>
